}
.abody{
  width: 100%;
  height:100%;
  background-color: #f8f8f8;
}
.amain{
  display: flex;
  justify-content: center;
}
.aheader{
  display: flex;
  font-size: 28px;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  font-family: 'Chunkfive Ex';
  margin-bottom: 15rpx; 
  justify-content:center;
  align-content: center;
