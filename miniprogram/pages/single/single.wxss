}
.articlecontent{
  background-color: #fff;
  overflow: hidden;
  padding: 20rpx;
  margin-bottom: 5px;
  width: 100%;
}
.articletitle{  
  color: #231815;
  border-left: 3px solid #231815;
  border-left-width: 80%;
  padding-left: 15rpx;
}
.htmlcontent{
  margin-top: 15rpx;
  padding-left: 15rpx;
  padding-bottom: 20rpx;
  margin-bottom: 10rpx;
  color: #707070;
  font-size: 14px;
